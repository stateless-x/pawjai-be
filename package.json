{
  "name": "pawjai-backend",
  "version": "1.0.0",
  "description": "Pawjai Backend API",
  "main": "src/index.ts",
  "scripts": {
    "build:ts": "bun build src/index.ts --outdir dist --target node",
    "db:generate": "drizzle-kit generate:pg --out ./db/drizzle",
    "build": "bun install && bun run build:ts",
    "build:prod": "bun install && bun run build:ts && bun install --production",
    "start:server": "bun dist/index.js",
    "start:prod": "bun run db:setup:auto && bun run db:verify && bun dist/index.js",
    "deploy": "bun run build:prod && bun run start:prod",
    "deploy:migrate": "bun run build:prod && bun run db:migrate:prod && bun run start:server",
    "db:migrate:prod": "bun run src/scripts/migrate.ts",
    "db:push:prod": "bun run src/scripts/setup-db.ts",
    "db:verify": "bun run src/scripts/verify-deployment.ts",
    "db:setup:auto": "bun run db:push:prod || echo 'Database setup failed, but continuing...'",
    "seed": "bun --env-file=.env.local run src/seed/run.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@types/sharp": "^0.32.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^5.4.0",
    "jose": "^6.0.12",
    "postgres": "^3.4.3",
    "sharp": "^0.34.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.9",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}