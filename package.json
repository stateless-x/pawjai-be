{
  "name": "pawjai-backend",
  "version": "1.0.0",
  "description": "Pawjai Backend API",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:local": "NODE_ENV=development bun --env-file=.env.local run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:prod": "bun run db:migrate:prod && bun run src/index.ts",
    "build": "bun run db:generate && bun run build:ts && bun install --production",
    "build:ts": "bun build src/index.ts --outdir dist --target node",
    "db:generate": "drizzle-kit generate:pg",
    "db:generate:local": "NODE_ENV=development bun --env-file=.env.local drizzle-kit generate:pg",
    "db:migrate": "bun --env-file=.env.local drizzle-kit up:pg",
    "db:migrate:prod": "NODE_ENV=production bunx drizzle-kit up:pg",
    "db:push": "bun --env-file=.env.local drizzle-kit push:pg",
    "db:push:local": "NODE_ENV=development bun --env-file=.env.local drizzle-kit push:pg",
    "db:push:prod": "NODE_ENV=production bunx drizzle-kit push:pg",
    "db:studio": "bun --env-file=.env.local run drizzle-kit studio",
    "db:studio:local": "NODE_ENV=development bun --env-file=.env.local run drizzle-kit studio",
    "db:drop": "bun --env-file=.env.local run drizzle-kit drop",
    "db:drop:local": "NODE_ENV=development bun --env-file=.env.local run drizzle-kit drop",
    "db:check": "bun --env-file=.env.local run drizzle-kit check:pg",
    "db:check:local": "NODE_ENV=development bun --env-file=.env.local run drizzle-kit check:pg",
    "db:reset": "npm run db:drop:local && npm run db:push:local",
    "db:reset:local": "npm run db:drop:local && npm run db:push:local",
    "seed": "bun --env-file=.env.local run src/seed/run.ts",
    "seed:local": "NODE_ENV=development bun --env-file=.env.local run src/seed/run.ts"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^9.0.3",
    "@fastify/rate-limit": "^10.3.0",
    "@types/sharp": "^0.32.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "fastify": "^5.4.0",
    "jose": "^6.0.12",
    "postgres": "^3.4.3",
    "sharp": "^0.34.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.9",
    "typescript": "^5.3.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}